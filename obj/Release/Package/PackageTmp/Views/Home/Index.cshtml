@{
    ViewBag.Title = "Home Page";
} 

@*<h2>Dashboard</h2>*@

@section scripts {    
    
    <script src="~/Scripts/controllers/dashboard/controller.js"></script>
    } 
<div ng-controller="dashboard">

    
    <br />

    <div class="container" >
        <h3 class="row title">
            <div class="col-xs-6"></div>
            <div class="col-xs-6 text-right text-gray">{{ today | date:'MMMM d, y' }}</div>
        </h3>
    </div>

        @*@Html.Partial("~/Views/Shared/partial/_stream.cshtml")
        @Html.Partial("~/Views/Shared/partial/_make_loan_confirm.cshtml")
        @Html.Partial("~/Views/Shared/partial/_drawer.cshtml")*@

    <div class="container" ng-init="init()">
        <!--menu bar-->
        @*@Html.Partial("~/Views/Shared/partial/_menubar.cshtml")*@
    </div>
    <div class="container">
        <h3 class="row title">
            <div class="col-xs-12">Dashboard</div>
        </h3>
        <div class="row">
            <div class="col-md-12">
                <!-- Tabs -->
                <div class="panel panel-default">
                    <h3 class="panel-heading">
                        <ul class="nav nav-tabs" role="tablist">
                            <li class="active">
                                <a href="#client_system" role="tab" data-toggle="tab">
                                    <i class="fa fa-clock-o text-gray"></i>
                                    Client & System
                                </a>
                            </li>
                            <li>
                                <a href="#maintenance" role="tab" data-toggle="tab">
                                    <i class="fa fa-pencil-square text-blue"></i>
                                    Maintenance
                                    <span class="badge" ng-show="applications.under_review.length > 0">{{applications.under_review.length}}</span>
                                </a>
                            </li>
                            <li>
                                <a href="#system_compliance" role="tab" data-toggle="tab">
                                    <i class="fa fa-check-square-o text-green"></i>
                                    System & Compliance
                                    <span class="badge" ng-show="applications.approved.length > 0">{{applications.approved.length}}</span>
                                </a>
                            </li>
                        </ul>
                    </h3>
                    <div class="panel-body">
                        <div class="tab-content">
                            <div class="tab-pane active" id="client_system">
                                @Html.Partial("~/Views/ClientSystem/index.cshtml")
                            </div>
                            <div class="tab-pane" id="maintenance">
                                @Html.Partial("~/Views/Maintenance/index.cshtml")
                            </div>
                            <div class="tab-pane" id="system_compliance">
                                @Html.Partial("~/views/SystemCompliance/index.cshtml")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--gridview check history-->
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <h3 class="panel-heading">
                        Geo Locations
                    </h3>                     
                        <div class="panel-body">
                            <div class="tab-content">
                                <div class="tab-pane active" id="api_geo_names">
                                    <table ng-gridview="api_geo_names" resource="$apigeonames">
                                        <thead>
                                            <tr>
                                                <th data-name="continent" data-width="50">continent</th>
                                                <th data-name="capital" data-width="75">capital</th>
                                                <th data-name="languages" data-width="160">languages</th>
                                                <th data-name="geonameId">geonameId</th>
                                                <th data-name="population">population</th>
                                                <th data-name="countryCode">countryCode</th>
                                                <th data-name="countryName">countryName</th>
                                                <th data-name="continentName">continentName</th>
                                                <th data-name="$options" data-width="160">Options</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
    </div>
</div>